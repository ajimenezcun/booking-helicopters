---
interface Props {
    title: string;
    link: string;
    placeName: string;
    placeLink: string;
    pricing: string;
}

const { title, link, placeName, pricing } = Astro.props;
---

<article
    class="bg-white border-4 border-white transition-all duration-300 group hover:border-second-200 hover:shadow-xl"
>
    <div class="overflow-hidden">
        <a href="#">
            <img
                src="place-1.jpg"
                alt=""
                class="transition-all duration-300 group-hover:scale-[1.1]"
            />
        </a>
    </div>
    <div class="p-3">
        <h3 class="text-2xl block">
            <a href="#" class="group-hover:underline">{title}</a>
        </h3>
        <a
            href="#"
            class="block text-xs mb-5 font-bold text-gray-500 hover:underline"
            >{placeName}</a
        >
        <div class="flex justify-between">
            <a
                href="#"
                class="bg-cta-600 text-white py-3 px-5 font-bold transition-all duration-300 hover:bg-cta-700"
                >Discover</a
            >
            <div class="text-right">
                <b class="block text-2xl"
                    >{pricing}<small class="text-sm">USD</small></b
                >
                <small class="block text-xs">FROM</small>
            </div>
        </div>
    </div>
</article>

---
interface Props {
    title: string;
    link: string;
}

const { title, link } = Astro.props;
const linkPost = `/blog/${link}`;
---

<article class="group">
    <div class="relative mb-3 overflow-hidden">
        <a href={linkPost}>
            <slot name="picture" />
        </div>
    </a>
</div>
<h3
    class="text-2xl transition-all duration-300 group-hover:underline"
>
    {title}
</h3>
    <slot />
    <a
        href={linkPost}
        class="block mt-2 font-bold transition-all duration-300 group-hover:underline"
        >Read more</a
    >
</article>

---
interface Props {
    question: string;
}

const { question } = Astro.props;
---

<article
    class="mb-5 transition duration-300 bg-white p-5 border border-2 border-gray-100 hover:translate-x-2 hover:shadow-xl hover:border-l-blue-400"
>
    <h4 class="mb-2">
        {question}
    </h4>
    <slot />
</article>

---
interface Props {
    place: string;
    url: string;
}

const { place, url } = Astro.props;
let link = `/places/${url}`;
---

<article class="relative mb-10 bg-cta-600 p-5 sm:bg-none sm:p-0">
    <slot name="place-thumb" />
    <div
        class="sm:absolute flex justify-end w-full h-full top-0 left-0 bg-gradient-to-l from-cta-600"
    >
        <div class="py-5 sm:px-5 sm:py-10 text-white lg:w-2/3 xl:w-1/2">
            <h4 class="text-white mb-3 text-3xl">{place}</h4>
            <slot name="description" />

            <div class="flex flex-col mt-5 mb-10 gap-2">
                <a href="#" class="underline">{place} Tours in Helicopter</a>
                <a href="#" class="underline"
                    >Helicopter Overflights in {place}</a
                >
                <a href="#" class="underline"
                    >Helicopter Transfers from {place}</a
                >
            </div>

            <a
                href={link}
                class="bg-second-950 text-white relative py-4 px-7 text-lg font-bold flex w-fit mt-5 items-center gap-3 justify-center transition-all duration-300 hover:bg-second-950 hover:text-white hover:shadow-xl sm:bg-cta-600 lg:w-fit lg:m-0"
            >
                <span>Explore {place}</span>
                <img src="svg/arrow-next-white.svg" width="20" alt="" />
            </a>
        </div>
    </div>
</article>

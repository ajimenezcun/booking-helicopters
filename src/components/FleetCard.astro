---
interface Props {
    helicopter: string;
    autonomy: number;
    people: number;
}

const { helicopter, autonomy, people } = Astro.props;
---

<div>
    <slot name="picture" />
    <h5 class="mt-5 mb-5">
        {helicopter}
    </h5>
    <div class="flex items-center gap-1 mb-3">
        <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            ><path
                fill="#999999"
                d="M8.25 17.25h2v-8.5h-3v2h1zm5 0h1.5q.825 0 1.413-.587t.587-1.413v-4.5q0-.825-.587-1.412T14.75 8.75h-1.5q-.825 0-1.412.588t-.588 1.412v4.5q0 .825.588 1.413t1.412.587m0-2v-4.5h1.5v4.5zM9 3V1h6v2zm3 19q-1.85 0-3.488-.712T5.65 19.35t-1.937-2.863T3 13t.713-3.488T5.65 6.65t2.863-1.937T12 4q1.55 0 2.975.5t2.675 1.45l1.4-1.4l1.4 1.4l-1.4 1.4Q20 8.6 20.5 10.025T21 13q0 1.85-.713 3.488T18.35 19.35t-2.863 1.938T12 22"
            ></path></svg
        >
        <span class="text-sm">Up to {autonomy} hours of fligth</span>
    </div>
    <div class="flex items-center gap-1">
        <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            ><circle cx="12" cy="6" r="4" fill="#999999"></circle><path
                fill="#999999"
                d="M20 17.5c0 2.485 0 4.5-8 4.5s-8-2.015-8-4.5S7.582 13 12 13s8 2.015 8 4.5"
            ></path></svg
        >
        <span class="text-sm">For {people} people</span>
    </div>
</div>

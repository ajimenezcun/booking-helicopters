---
interface Info {
    place: string;
    time: string;
    capacity: number;
}

interface Props {
    title: string;
    info: Info;
    pricing: string;
    link: string;
}

const { title, info, pricing, link } = Astro.props;
let url = `/overflights/${link}`;
---

<article
    class="flex flex-col border-2 border-cta-200 p-5 mb-10 transition-all duration-300 group lg:flex-row lg:gap-5 hover:shadow-xl hover:border-cta-600"
>
    <figure class="lg:w-1/3">
        <a href={url}>
            <slot name="thumb" />
        </a>
    </figure>
    <div class="pt-5 lg:w-2/3 lg:pt-0">
        <h3>
            <a href={url} class="group-hover:underline">{title}</a>
        </h3>
        <slot name="description" />
        <div class="flex flex-col gap-5 lg:flex-row lg:gap-10">
            <div>
                <div class="flex gap-2 mb-2">
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="20"
                        height="20"
                        viewBox="0 0 100 100"
                        ><path
                            fill="#000000"
                            d="M50 10.417c-15.581 0-28.201 12.627-28.201 28.201a28.074 28.074 0 0 0 5.602 16.873L45.49 86.823c.105.202.21.403.339.588l.04.069l.011-.006a5.063 5.063 0 0 0 4.135 2.111c1.556 0 2.912-.708 3.845-1.799l.047.027l.179-.31c.264-.356.498-.736.667-1.155L72.475 55.65a28.074 28.074 0 0 0 5.726-17.032c0-15.574-12.62-28.201-28.201-28.201m-.279 42.498c-7.677 0-13.895-6.221-13.895-13.895c0-7.673 6.218-13.895 13.895-13.895s13.895 6.222 13.895 13.895c0 7.673-6.218 13.895-13.895 13.895"
                        ></path></svg
                    >
                    <span>{info.place}</span>
                </div>
                <div class="flex gap-2 mb-2">
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="20"
                        height="20"
                        viewBox="0 0 24 24"
                        ><path
                            fill="#000000"
                            d="M6 2h12v6l-4 4l4 4v6H6v-6l4-4l-4-4zm10 14.5l-4-4l-4 4V20h8zm-4-5l4-4V4H8v3.5zM10 6h4v.75l-2 2l-2-2z"
                        ></path></svg
                    >
                    <span>{info.time}.(<small>Of Flight</small>)</span>
                </div>
                <div class="flex gap-2">
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="20"
                        height="20"
                        viewBox="0 0 26 26"
                        ><path
                            fill="#000000"
                            d="M14.813 7.531a.95.95 0 0 0-.75.969v.063L5 8.063A.93.93 0 0 0 4.062 9A.93.93 0 0 0 5 9.938l9.063-.5v2.093A4.41 4.41 0 0 0 12.28 13H2.5c-.5 0-.619.844-.063.938c.153.025 5.561 1.345 8.75 2.124c-.057.447-.093.9-.093 1.375c0 3.525 3.079 3.532 6.875 3.532s6.843-.006 6.843-3.532c0-3.522-4.609-6.375-8.406-6.375c-.162 0-.315.022-.468.032V9.438l9.062.5A.93.93 0 0 0 25.938 9A.93.93 0 0 0 25 8.062l-9.063.5V8.5a.95.95 0 0 0-1.03-.969a.95.95 0 0 0-.095 0zM2.5 11.188a2.312 2.312 0 1 0 0 4.624a2.28 2.28 0 0 0 1.813-.906l-1.22-.344c-.177.1-.376.188-.593.188c-.686 0-1.25-.565-1.25-1.25s.565-1.25 1.25-1.25c.332 0 .622.13.844.344h1.281A2.293 2.293 0 0 0 2.5 11.188m15.625 1.874c1.78 0 4.844 1.663 4.844 3.75c0 .782-.81 1.157-3.563 1.157c-1.806 0-2.312-.84-2.312-1.907c0-1.613.198-3 1.031-3m6.688 7.97a.95.95 0 0 0-.688.593c.01-.01.035-.017-.063.031c-.277.139-1.15.407-3.062.407H10a.95.95 0 1 0 0 1.875h11c2.071 0 3.18-.233 3.906-.594c.363-.181.641-.404.813-.657c.086-.126.152-.257.187-.375c.036-.117.032-.28.032-.28a.95.95 0 0 0-1.032-1a.95.95 0 0 0-.093 0M902 1469v2h26v-2zm4 5v2h18v-2zm-4 5v2h26v-2zm4 5v2h18v-2zm-4 5v2h26v-2z"
                        ></path></svg
                    >
                    <span>{info.capacity} Guests (<small>Capacity</small>)</span
                    >
                </div>
            </div>
            <div>
                <b class="text-2xl text-center block lg:text-left"
                    >{pricing}<small>USD</small></b
                >
                <a
                    href={url}
                    class="bg-cta-600 text-white py-3 px-5 flex w-full mt-1 items-center gap-3 justify-center transition-all duration-300 hover:bg-second-950 hover:text-white hover:shadow-xl"
                >
                    <span>Book Now</span>
                    <img src="svg/arrow-next-white.svg" width="20" alt="" />
                </a>
            </div>
        </div>
    </div>
</article>

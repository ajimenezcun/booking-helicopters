---
interface Props {
    title: string;
    duration: string;
    pricing: string;
    link: string;
}

const { title, duration, pricing, link } = Astro.props;
let url = `/tours/${link}`;
---

<article
    class="flex flex-col border-2 border-cta-200 p-5 mb-10 transition-all duration-300 group lg:flex-row lg:gap-5 hover:shadow-xl hover:border-cta-600"
>
    <figure class="lg:w-1/3">
        <a href={url}>
            <slot name="thumb" />
        </a>
    </figure>
    <div class="pt-5 lg:w-2/3 lg:pt-0">
        <h3>
            <a href={url} class="group-hover:underline">{title}</a>
        </h3>
        <slot name="description" />
        <div class="flex flex-col gap-5 lg:flex-row lg:gap-10">
            <div>
                <div class="flex gap-2 mb-2">
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="20"
                        height="20"
                        viewBox="0 0 100 100"
                        ><path
                            fill="#000000"
                            d="M50 10.417c-15.581 0-28.201 12.627-28.201 28.201a28.074 28.074 0 0 0 5.602 16.873L45.49 86.823c.105.202.21.403.339.588l.04.069l.011-.006a5.063 5.063 0 0 0 4.135 2.111c1.556 0 2.912-.708 3.845-1.799l.047.027l.179-.31c.264-.356.498-.736.667-1.155L72.475 55.65a28.074 28.074 0 0 0 5.726-17.032c0-15.574-12.62-28.201-28.201-28.201m-.279 42.498c-7.677 0-13.895-6.221-13.895-13.895c0-7.673 6.218-13.895 13.895-13.895s13.895 6.222 13.895 13.895c0 7.673-6.218 13.895-13.895 13.895"
                        ></path></svg
                    >
                    <span><small>Leaving from</small> Cancun</span>
                </div>
                <div class="flex gap-2 mb-2">
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="20"
                        height="20"
                        viewBox="0 0 24 24"
                        ><path
                            fill="none"
                            stroke="#000000"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="1.5"
                            d="M8.376 3q-.322.12-.631.261m12.973 13.04q.153-.332.282-.676m-2.501 3.74q.258-.24.497-.499m-3.727 2.506q.291-.11.573-.237m-3.686.859q-.346.012-.694 0m-3.675-.854q.272.123.551.228m-3.665-2.447q.204.217.423.422m-2.463-3.678q.113.296.243.583m-.871-3.743a10 10 0 0 1 0-.626m.62-3.142q.111-.293.24-.577m1.791-2.68q.217-.232.449-.449M13.5 12a1.5 1.5 0 1 1-1.5-1.5m1.5 1.5a1.5 1.5 0 0 0-1.5-1.5m1.5 1.5H16m-4-1.5V6m10 6c0-5.523-4.477-10-10-10"
                            color="#000000"></path></svg
                    >
                    <span><small>Tour duration</small> {duration}</span>
                </div>
            </div>
            <div>
                <b class="text-2xl text-center block lg:text-left"
                    >{pricing}<small>USD</small></b
                >
                <small class="text-gray-400">p/person</small>
            </div>
            <div>
                <a
                    href={url}
                    class="bg-cta-600 text-white py-3 px-5 flex w-full mt-1 items-center gap-3 justify-center transition-all duration-300 hover:bg-second-950 hover:text-white hover:shadow-xl"
                >
                    <span>Book Now</span>
                    <img src="svg/arrow-next-white.svg" width="20" alt="" />
                </a>
            </div>
        </div>
    </div>
</article>
